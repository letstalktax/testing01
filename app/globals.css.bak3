@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
    /* Primary Colors */
    --primary: #1E3A8A; /* Deep Blue for primary actions and branding */
    --secondary: #D1D5DB; /* Light Gray for secondary elements */
    --accent: #2DD4BF; /* Teal for highlights and focus states */
    --text: #374151; /* Charcoal for readable text */
    --success: #10B981; /* Green for success messages */
    --warning: #EF4444; /* Red for errors and warnings */
    --white: #FFFFFF; /* Backgrounds and light text */
    --light-gray: #E5E7EB; /* Borders and subtle backgrounds */
    --black: #000000; /* Fallback or report-specific use */
    
    /* Legacy colors - keeping for compatibility */
    --foreground-rgb: 55, 65, 81;
    --background-start-rgb: 209, 213, 219;
    --background-end-rgb: 255, 255, 255;
}

/* Dark Mode */
[data-theme="dark"] {
    --background: #121212; /* Dark Gray background (not pure black) */
    --card-background: #1E1E1E; /* Slightly lighter card background */
    --text: #E0E0E0; /* Light text for readability */
    --primary: #3B82F6; /* Lighter blue for contrast */
    --secondary: #374151; /* Adjusted gray */
    --accent: #2DD4BF; /* Same teal, or tweak if needed */
    --success: #34D399; /* Lighter green */
    --warning: #F87171; /* Lighter red */
    --light-gray: #4B5563; /* Darker gray for borders */
}

@media (prefers-color-scheme: dark) {
    :root {
        --foreground-rgb: 255, 255, 255;
        --background-start-rgb: 0, 0, 0;
        --background-end-rgb: 0, 0, 0;
    }
}

@layer utilities {
    .text-balance {
        text-wrap: balance;
    }
}

/* Custom animations for attachment previews */
@keyframes progress-indeterminate {
    0% {
        width: 0%;
        left: 0;
    }
    50% {
        width: 75%;
        left: 0;
    }
    100% {
        width: 0%;
        left: 100%;
    }
}

@keyframes fade-in {
    from { opacity: 0; }
    to { opacity: 1; }
}

@keyframes fade-out {
    from { opacity: 1; }
    to { opacity: 0; }
}

@keyframes scale-in {
    from { transform: scale(0.9); opacity: 0; }
    to { transform: scale(1); opacity: 1; }
}

@keyframes fadeIn {
    0% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}

@keyframes slideIn {
    0% {
        transform: translateX(20px);
        opacity: 0;
    }
    100% {
        transform: translateX(0);
        opacity: 1;
    }
}

/* Thinking animation for chat */
@keyframes thinking {
    0%, 80%, 100% { transform: scale(0); }
    40% { transform: scale(1); }
}

.animate-progress-indeterminate {
    animation: progress-indeterminate 2s ease-in-out infinite;
}

.animate-fade-in {
    animation: fade-in 0.3s ease-in-out forwards;
}

.animate-fade-out {
    animation: fade-out 0.3s ease-in-out forwards;
}

.animate-scale-in {
    animation: scale-in 0.3s ease-out forwards;
}

.animate-fadeIn {
    animation: fadeIn 0.3s ease-in forwards;
}

.animate-slideIn {
    animation: slideIn 0.4s ease-out forwards;
}

@layer base {
    /* TailwindCSS Theme Variables */
    :root {
        --background: 0 0% 100%;
        --foreground: 222 47% 11%;
        --card: 0 0% 100%;
        --card-foreground: 222 47% 11%;
        --popover: 0 0% 100%;
        --popover-foreground: 222 47% 11%;
        --primary: 221 83% 33%;
        --primary-foreground: 210 40% 98%;
        --secondary: 210 40% 96.1%;
        --secondary-foreground: 222 47% 11%;
        --muted: 210 40% 96.1%;
        --muted-foreground: 215.4 16.3% 46.9%;
        --accent: 173 83% 50%;
        --accent-foreground: 222 47% 11%;
        --destructive: 0 84.2% 60.2%;
        --destructive-foreground: 210 40% 98%;
        --border: 214.3 31.8% 91.4%;
        --input: 214.3 31.8% 91.4%;
        --ring: 221 83% 33%;
        --radius: 0.5rem;
        --sidebar-background: 0 0% 98%;
        --sidebar-foreground: 240 5.3% 26.1%;
        --sidebar-primary: 221 83% 33%;
        --sidebar-primary-foreground: 0 0% 98%;
        --sidebar-accent: 240 4.8% 95.9%;
        --sidebar-accent-foreground: 240 5.9% 10%;
        --sidebar-border: 220 13% 91%;
        --sidebar-ring: 221 83% 33%;
    }
    
    .dark {
        --background: 0 0% 0%;
        --foreground: 0 0% 100%;
        --card: 0 0% 0%;
        --card-foreground: 0 0% 100%;
        --popover: 0 0% 0%;
        --popover-foreground: 0 0% 100%;
        --primary: 221 83% 33%;
        --primary-foreground: 0 0% 100%;
        --secondary: 0 0% 10%;
        --secondary-foreground: 0 0% 100%;
        --muted: 0 0% 15%;
        --muted-foreground: 0 0% 70%;
        --accent: 173 83% 50%;
        --accent-foreground: 0 0% 100%;
        --destructive: 0 62.8% 30.6%;
        --destructive-foreground: 0 0% 100%;
        --border: 0 0% 20%;
        --input: 0 0% 15%;
        --ring: 0 0% 83.9%;
        --sidebar-background: 0 0% 0%;
        --sidebar-foreground: 0 0% 100%;
        --sidebar-primary: 221 83% 33%;
        --sidebar-primary-foreground: 0 0% 100%;
        --sidebar-accent: 0 0% 15%;
        --sidebar-accent-foreground: 0 0% 100%;
        --sidebar-border: 0 0% 20%;
        --sidebar-ring: 221 83% 33%;
    }
}

@layer base {
    * {
        @apply border-border;
    }

    html {
        font-size: 16px;
    }

    body {
        @apply bg-background text-foreground;
        font-family: "SF Pro", "Inter", sans-serif;
        line-height: 1.5;
    }
    
    /* Font declarations */
    /* SF Pro fonts */
    @font-face {
        font-family: "SF Pro";
        font-style: normal;
        font-weight: 400;
        src: local("SF Pro Text Regular"), local("SF Pro Regular"),
             url(/fonts/sf-pro/SF-Pro-Text-Regular.woff2) format("woff2");
        font-display: swap;
    }
    
    @font-face {
        font-family: "SF Pro";
        font-style: normal;
        font-weight: 700;
        src: local("SF Pro Text Bold"), local("SF Pro Bold"),
             url(/fonts/sf-pro/SF-Pro-Text-Bold.woff2) format("woff2");
        font-display: swap;
    }
    
    /* Inter fallback fonts */
    @font-face {
        font-family: "Inter";
        font-style: normal;
        font-weight: 400;
        src: url(/fonts/inter/Inter-Regular.woff2) format("woff2");
        font-display: swap;
    }
    
    @font-face {
        font-family: "Inter";
        font-style: normal;
        font-weight: 700;
        src: url(/fonts/inter/Inter-Bold.woff2) format("woff2");
        font-display: swap;
    }

    /* Legacy font declarations - keeping for compatibility */
    @font-face {
        font-family: "geist";
        font-style: normal;
        font-weight: 100 900;
        src: url(/fonts/geist.woff2) format("woff2");
    }

    @font-face {
        font-family: "geist-mono";
        font-style: normal;
        font-weight: 100 900;
        src: url(/fonts/geist-mono.woff2) format("woff2");
    }
    
    /* Typography styles */
    h1, h2, h3, h4, h5, h6 {
        font-family: "SF Pro", "Inter", sans-serif;
        font-weight: 700;
        line-height: 1.2;
    }
    
    h1 {
        font-size: 1.5rem; /* 24px */
        margin-bottom: 1rem;
    }
    
    h2 {
        font-size: 1.25rem; /* 20px */
        margin-bottom: 0.75rem;
    }
    
    h3 {
        font-size: 1.125rem; /* 18px */
        margin-bottom: 0.5rem;
    }
    
    p {
        margin-bottom: 1rem;
    }
    
    /* Print styles for reports */
    @media print {
        @page {
            size: A4;
            margin: 25mm;
        }
        
        body {
            font-family: "SF Pro", "Inter", "Helvetica", sans-serif;
            font-size: 11pt;
            line-height: 1.5;
            color: #000000;
            background-color: #FFFFFF;
        }
        
        header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            height: 30mm;
            background-color: var(--primary);
            color: var(--white);
            text-align: center;
            padding: 5mm;
            font-size: 14pt;
            font-weight: 700;
        }
        
        footer {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            height: 20mm;
            background-color: var(--primary);
            color: var(--white);
            text-align: center;
            padding: 5mm;
            font-size: 10pt;
        }
        
        footer::after {
            content: "Page " counter(page);
        }
        
        .content {
            margin-top: 35mm;
            margin-bottom: 25mm;
        }
        
        h1 {
            font-size: 16pt;
            color: var(--primary);
            margin-bottom: 1rem;
            font-weight: 700;
        }
        
        h2 {
            font-size: 14pt;
            color: var(--primary);
            margin-bottom: 0.75rem;
            font-weight: 700;
        }
        
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 1rem;
            page-break-inside: avoid;
        }
        
        th, td {
            border: 1px solid #000;
            padding: 0.5rem;
            text-align: left;
            font-size: 11pt;
        }
        
        th {
            background-color: #f0f0f0;
            font-weight: 700;
        }
        
        .no-print {
            display: none;
        }
        
        body {
            background-color: #FFFFFF;
        }
    }
}

